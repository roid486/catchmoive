<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<properties resource="com/jun/data/javajo.properties"/>
	<typeAliases>
		<typeAlias type="com.javajo.vo.MovieTheaterVo" alias="movietheaterVo"/>
		<typeAlias type="com.javajo.vo.CustomerVo" alias="customerVo"/> 
		<typeAlias type="com.jun.vo.BoardVo" alias="boardVo"/>
		<typeAlias type="com.jun.vo.ReplyVo" alias="replyVo"/> 
	</typeAliases>
<environments default="development">
    <environment id="development">
      <transactionManager type="JDBC"/>
      <dataSource type="POOLED">
        <property name="driver" value="${driver}"/>
        <property name="url" value="${url}"/>
        <property name="username" value="${user}"/>
        <property name="password" value="${pwd}"/>
      </dataSource>
    </environment>
  </environments>
  <mappers>
    <mapper resource="com/jun/data/javajoMapper.xml"/>
  </mappers>
</configuration>